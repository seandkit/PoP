<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_for_mainpage"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/logoPop"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/regFirstName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/poplogonew"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"


        android:layout_marginBottom="50dp"
        android:background="@drawable/back_for_main_yellow"
        android:orientation="horizontal">


    </LinearLayout>

    <EditText
        android:id="@+id/regFirstName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/regLastName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/underline_login"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:textColorHint="#474545"
        android:textColor="#474545"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/regLastName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/regEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/underline_login"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:textColorHint="#474545"
        android:textColor="#474545"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/regEmail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/regPassword"
        android:layout_alignStart="@+id/regFirstName"
        android:layout_alignLeft="@+id/regFirstName"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/underline_login"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#474545"
        android:textColor="#474545"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/regPassword"
        android:layout_above="@+id/regConfirmPassword"
        android:hint="Password"
        android:layout_alignStart="@+id/regFirstName"
        android:layout_alignLeft="@+id/regFirstName"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/underline_login"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="#474545"
        android:textColor="#474545"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/regConfirmPassword"
        android:layout_above="@+id/regBtn"
        android:hint="Confirm Password"
        android:layout_alignStart="@+id/regFirstName"
        android:layout_alignLeft="@+id/regFirstName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/underline_login"

        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="#474545"
        android:textColor="#474545"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/loginLink"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:text="Back to Login."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>



    <Button
        android:id="@+id/regBtn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/loginLink"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/custom_button"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />
</RelativeLayout>